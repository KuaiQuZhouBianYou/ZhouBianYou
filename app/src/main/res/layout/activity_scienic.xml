<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/activity_scienic_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="180dp"

     >
<ImageView
    android:id="@+id/activity_scienic_top_coverimg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@mipmap/destination_head_bg"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:orientation="vertical"
           android:padding="10dp"
           android:layout_gravity="center_vertical"
           >
          <TextView
              android:id="@+id/activity_scienic_name"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="上海迪士尼度假区"
              android:textSize="20dp"
              android:textColor="#fff"
              />
          <TextView
              android:id="@+id/activity_scienic_weather"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="晴天"
              android:textSize="16dp"
              android:textColor="#fff"
              />

       </LinearLayout>
       <TextView
           android:id="@+id/activity_scienic_introduce"
           android:gravity="center"
           android:layout_width="60dp"
           android:layout_height="match_parent"
           android:text="景区介绍"
           android:textColor="#fff"
           android:drawableTop="@mipmap/resorts_introduction_icon"
           />
      <TextView
          android:id="@+id/activity_scienic_pic"
    android:gravity="center"
    android:layout_width="60dp"
    android:layout_height="match_parent"
    android:text="景区图"
    android:textColor="#fff"
    android:drawableTop="@mipmap/resorts_images_icon"
    />


    </LinearLayout>

 </RelativeLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="120dp"
       android:orientation="vertical"
       >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="70dp"
          android:orientation="horizontal"
          >
         <TextView
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:layout_marginLeft="10dp"
             android:layout_weight="2"
             android:text="  开放时间："
             android:drawableLeft="@mipmap/resorts_open_time_icon"
             />
         <TextView
             android:id="@+id/activity_scienic_open_time"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:layout_weight="5"
             android:text="  开放时间："
             />

      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:orientation="horizontal"
          >
         <TextView
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="2"
             android:layout_marginTop="10dp"
             android:layout_marginLeft="10dp"
             android:text="地址： "
             android:drawableLeft="@mipmap/resorts_location_icon"
             />
         <TextView
             android:id="@+id/activity_scienic_adress"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:gravity="center_vertical|left"
             android:layout_marginTop="10dp"
             android:layout_weight="5"
             android:text="开放时间："
             android:lines="1"
             />
         <ImageView
             android:id="@+id/activity_scienic_map"
             android:layout_width="40dp"
             android:layout_height="match_parent"
             android:padding="15dp"
             android:src="@mipmap/setting_next_icon"
             />

      </LinearLayout>

   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="400dp"
       android:orientation="vertical"
       android:background="@color/gray_small"

       >
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="必玩推荐"
          android:gravity="center"
          android:textSize="20dp"

          />
      <android.support.v4.view.ViewPager
          android:id="@+id/activity_scienic_recommend"
          android:background="#fff"
         android:layout_margin="10dp"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

      </android.support.v4.view.ViewPager>

   </LinearLayout>


   <android.support.v7.widget.Toolbar
       android:layout_width="match_parent"
       android:layout_height="60dp">

   </android.support.v7.widget.Toolbar>

   <android.support.v4.view.ViewPager
       android:layout_width="match_parent"
       android:layout_height="match_parent">

   </android.support.v4.view.ViewPager>


</LinearLayout>

</ScrollView>
    <RelativeLayout
        android:id="@+id/activity_scienic_top"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        >

        <TextView
            android:id="@+id/activity_scienic_top_title"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="上海迪士尼度假区"
            android:textSize="20dp"
            android:background="#fff"
            android:alpha="0"
            />
        <ImageView
            android:id="@+id/activity_scienic_top_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@mipmap/nav_bar_back_white_icon"
            android:padding="10dp"
            />
        <ImageView
            android:id="@+id/activity_scienic_top_share"
            android:layout_alignParentRight="true"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_dark_share"
            android:padding="10dp"
            />
    </RelativeLayout>
    </FrameLayout>
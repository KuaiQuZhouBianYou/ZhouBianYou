<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/home_header_vp"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <RelativeLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_alignBottom="@id/home_header_vp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:id="@+id/home_header_ll_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:layout_alignParentRight="true"
            android:paddingTop="20dp"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            />
    </RelativeLayout>

    <com.phone1000.wanttozhoubianyou.MyGridView
        android:id="@+id/home_head_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_header_vp"
        android:layout_marginTop="10dp"
        android:columnCount="5"
        android:numColumns="5"/>
    <View
        android:id="@+id/home_head_fenge"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/home_head_grid"
        android:background="#b9dfdede"
        android:layout_marginTop="10dp"
        />
    <RelativeLayout
        android:id="@+id/home_head_qiandao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_head_fenge">
        <ImageView
            android:id="@+id/qiandao_image"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:src="@mipmap/home_registration_img"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="日积月累成土豪，快来签到吧"
            android:textSize="14sp"
            android:drawableRight="@mipmap/home_registration_arrow"
            android:layout_marginRight="10dp"
            android:drawablePadding="10dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/home_head_fengeqiandao"
        android:layout_width="match_parent"
        android:layout_below="@+id/home_head_qiandao"
        android:layout_height="7dp"
        android:background="#EEE9E3"/>
    <RelativeLayout
        android:id="@+id/home_head_tuijian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_head_fengeqiandao">
        <LinearLayout
            android:id="@+id/home_head_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="目的地推荐"
                android:textSize="18sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:textColor="#d7d5d5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="精选推荐好玩的景区、城市"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:textColor="#d7d5d5"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_head_layout">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/home_head_recycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>